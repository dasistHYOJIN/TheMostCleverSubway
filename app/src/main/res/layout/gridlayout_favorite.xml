            app:srcCompat="@mipmap/ic_launcher" />-->

        <TextView
            android:id="@+id/text_subwayinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line3 Downward"
            android:textSize="15sp"
            android:layout_above="@+id/text_fastseat"
            android:layout_alignLeft="@+id/text_realtime"
            android:layout_alignStart="@+id/text_realtime" />

        <TextView
            android:id="@+id/text_realtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="02 : 45"
            android:textColor="@color/colorCustomDark"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_bestseat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6-1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/text_realtime"
            android:layout_alignBottom="@+id/text_realtime"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />

        <TextView
            android:id="@+id/text_fastseat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8-3"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_alignTop="@+id/text_realtime"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignTop="@+id/text_fastseat"
            android:layout_toLeftOf="@+id/text_fastseat"
            android:layout_toStartOf="@+id/text_fastseat" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignBottom="@+id/text_bestseat"
            android:layout_toLeftOf="@+id/text_fastseat"
            android:layout_toStartOf="@+id/text_fastseat" />

    </android.support.percent.PercentRelativeLayout>

