    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@drawable/grid_favorite"
        app:layout_widthPercent="50%"
        android:elevation="4dp">

        <TextView
            android:id="@+id/text_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_realtime"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/text_realtime"
            android:layout_marginTop="11dp"
            android:text="Subway course"
            android:textColor="@color/colorCustomDark"
            android:textSize="18sp"
            android:textStyle="bold" />
